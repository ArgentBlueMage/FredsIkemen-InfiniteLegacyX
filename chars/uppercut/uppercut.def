; Definition file for Kung Fu Man
; Contains all the filenames needed for the character

; Player information
[Info]
name = "Shoryuken"        ;Name of character
displayname = "Uppercut" ;Name of character to display
versiondate = 01,04,2011    ;Version date of character (MM-DD-YYYY)
mugenversion = 04,14,2002   ;Version of M.U.G.E.N character works on
author = "The_None"
pal.defaults = 1

